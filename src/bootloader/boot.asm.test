org 0x7C00
bits 16

; 628 sectors (629)

start:
    ; mov byte [disk_number], dl ; save disk number

    xor ax, ax

    mov dl, 0x80
    mov ch, 0
    mov dh, 0
    mov cl, 2
    mov al, 628

    push ax
    push dx

    mov dl, 16
    mul dl

    pop dx
    pop ax

    add bx,

    mov ah, 0x02
    int 0x13

    call reg_clear
    cli
    hlt

reg_clear: ; clear registers
    xor ax, ax
    xor bx, cx
    xor cx, cx
    xor dx, dx
    xor si, si
    ret 

disk_number:     db 0

times 510-($-$$) db 0
dw 0AA55h

exit: